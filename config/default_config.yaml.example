# Werewolf Arena Multi-Model Configuration
# This example shows how to configure different models for different players and roles

# Game Settings
game:
  player_count: 6
  min_players: 6
  max_players: 12

  # Role distribution for 6 players (2狼2民1神1神)
  roles:
    werewolf: 2
    villager: 2
    seer: 1
    witch: 1

  # Game timing (in seconds)
  timing:
    night_duration: 30
    day_discussion: 60
    voting_duration: 30
    action_confirmation: 5

  # Action order settings
  action_order:
    type: "sequential"
    direction: "forward"

# Default LLM Configuration (used when no specific config is provided)
llm:
  model: "deepseek/deepseek-chat-v3.1"
  api_key: "your-api-key-here"  # Set via environment variable
  temperature: 0.7
  max_tokens: 100000
  timeout_seconds: 30
  max_retries: 3

# Player-specific model configurations
# Player numbers correspond to their player numbers (1, 2, 3, etc.)
player_models:
  "1":
    model: "gpt-4o"
    api_key: "your-api-key-here"
    temperature: 0.8
    max_tokens: 2000
    timeout_seconds: 30
    max_retries: 3
  "2":
    model: "claude-3-5-sonnet"
    api_key: "your-api-key-here"
    temperature: 0.6
    max_tokens: 1500
    timeout_seconds: 30
    max_retries: 3
  "3":
    model: "deepseek/deepseek-chat-v3.1"
    api_key: "your-api-key-here"
    temperature: 0.7
    max_tokens: 1000
    timeout_seconds: 30
    max_retries: 3

# Role-specific model configurations
# These override player-specific configs if a player has this role
role_models:
  "werewolf":
    model: "gpt-4o"
    api_key: "your-api-key-here"
    temperature: 0.9  # Higher temperature for more aggressive werewolf behavior
    max_tokens: 2000
    timeout_seconds: 30
    max_retries: 3
  "seer":
    model: "claude-3-5-sonnet"
    api_key: "your-api-key-here"
    temperature: 0.5  # Lower temperature for more logical seer behavior
    max_tokens: 1500
    timeout_seconds: 30
    max_retries: 3
  "witch":
    model: "deepseek/deepseek-chat-v3.1"
    api_key: "your-api-key-here"
    temperature: 0.7
    max_tokens: 1000
    timeout_seconds: 30
    max_retries: 3

# UI Configuration
ui:
  console_width: 80
  enable_colors: true
  enable_animations: true
  show_debug_info: false
  log_level: "info"

  # Display settings
  display:
    show_player_status: true
    show_game_state: true
    show_action_history: true
    show_statistics: true

# Logging Configuration
logging:
  level: "info"
  enable_console: true
  enable_file: true
  log_file_path: "logs/werewolf_arena.log"
  max_log_size_mb: 10
  max_log_files: 5

# Development Settings
development:
  enable_debug_mode: false
  enable_test_mode: false
  mock_llm_responses: false
  save_game_states: false
  auto_save_interval: 0